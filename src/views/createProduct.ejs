<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Create Product</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />

    <style>
      body {
        font-family: Arial, sans-serif;
        margin: 20px;
        padding: 0;
        background-color: #f5f5f5;
      }

      h1 {
        color: #333;
      }

      form {
        background-color: #fff;
        padding: 20px;
        border-radius: 8px;
        max-width: 500px;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
      }

      input,
      button {
        display: block;
        width: 100%;
        margin-bottom: 15px;
        padding: 10px;
        font-size: 16px;
      }

      input[type="text"],
      input[type="number"] {
        border: 1px solid #ccc;
        border-radius: 4px;
      }

      button {
        background-color: #007bff;
        color: #fff;
        border: none;
        border-radius: 4px;
        cursor: pointer;
      }

      button:hover {
        background-color: #0056b3;
      }

      ul {
        color: red;
        padding-left: 20px;
      }
    </style>
  </head>
  <body>
    <h1>Create New Product</h1>

    <% if (typeof errors !== 'undefined' && errors.length > 0) { %>
    <ul>
      <% errors.forEach((error) => { %>
      <li><%= error %></li>
      <% }) %>
    </ul>
    <% } %>

    <form
      action="<%= typeof isEdit !== 'undefined' ? '/products/' + product.productId :'/products' %>"
      method="POST"
    >
      <input
        type="text"
        name="name"
        placeholder="Product Name"
        value="<%= typeof product !== 'undefined' ? product.name : '' %>"
      />
      <input
        type="text"
        name="description"
        placeholder="Description"
        value="<%= typeof product !== 'undefined' ? product.description : '' %>"
      />
      <input
        type="number"
        name="price"
        placeholder="Price"
        step="0.01"
        value="<%= typeof product !== 'undefined' ? product.price : '' %>"
      />
      <input
        type="text"
        name="imageUrl"
        placeholder="Image URL"
        value="<%= typeof product !== 'undefined' ? product.imageUrl : '' %>"
      />
      <button
        type="submit"
        class="btn <%= typeof isEdit !== 'undefined' ? 'btn-warning' : 'btn-primary' %>"
      >
        <%= typeof isEdit !== 'undefined' ? 'Edit Product' : 'Create Product' %>
      </button>
    </form>
  </body>
</html>
