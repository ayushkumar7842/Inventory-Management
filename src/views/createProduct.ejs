<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Create Product</title>
    <style>
      body {
        font-family: Arial, sans-serif;
        margin: 20px;
        padding: 0;
        background-color: #f5f5f5;
      }

      h1 {
        color: #333;
      }

      form {
        background-color: #fff;
        padding: 20px;
        border-radius: 8px;
        max-width: 500px;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
      }

      input,
      button {
        display: block;
        width: 100%;
        margin-bottom: 15px;
        padding: 10px;
        font-size: 16px;
      }

      input[type="text"],
      input[type="number"] {
        border: 1px solid #ccc;
        border-radius: 4px;
      }

      button {
        background-color: #007bff;
        color: #fff;
        border: none;
        border-radius: 4px;
        cursor: pointer;
      }

      button:hover {
        background-color: #0056b3;
      }

      ul {
        color: red;
        padding-left: 20px;
      }
    </style>
  </head>
  <body>
    <h1>Create New Product</h1>

    <% if (errors && errors.length > 0) { %>
    <ul>
      <% errors.forEach((error) => { %>
      <li><%= error %></li>
      <% }) %>
    </ul>
    <% } %>

    <form action="/products" method="POST">
      <input
        type="text"
        name="name"
        placeholder="Product Name"
        value="<%= formData?.name || '' %>"
      />
      <input
        type="text"
        name="description"
        placeholder="Description"
        value="<%= formData?.description || '' %>"
      />
      <input
        type="number"
        name="price"
        placeholder="Price"
        step="0.01"
        value="<%= formData?.price || '' %>"
      />
      <input
        type="text"
        name="imageUrl"
        placeholder="Image URL"
        value="<%= formData?.imageUrl || '' %>"
      />
      <button type="submit">Create Product</button>
    </form>
  </body>
</html>
